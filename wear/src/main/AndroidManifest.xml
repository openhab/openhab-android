<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.openhab.habdroid">

    <uses-feature android:name="android.hardware.type.watch" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/openhabicon"
        android:label="@string/app_name"
        android:theme="@android:style/Theme.DeviceDefault">
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <activity
            android:name=".WearMainActivity"
            android:label="@string/title_activity_main"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WidgetListActivity"
            android:label="@string/title_activity_main"></activity>
        <activity
            android:name=".widget.SwitchWidgetActivity"
            android:label="@string/title_activity_main"></activity>
        <activity
            android:name=".widget.RollerShutterWidgetActivity"
            android:label="@string/title_activity_main"></activity>
        <activity
            android:name="android.support.wearable.activity.ConfirmationActivity"></activity>
    </application>

</manifest>
