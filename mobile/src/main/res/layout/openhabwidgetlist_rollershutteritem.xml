<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:activatedBackgroundIndicator"
    android:descendantFocusability="blocksDescendants"
    tools:layout_editor_absoluteY="25dp">

    <include
        android:id="@+id/rollershutterleftlayout"
        layout="@layout/openhabwidgetlist_icontext"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rollershutterbutton_up"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp" />

    <ImageButton
        android:id="@+id/rollershutterbutton_up"
        android:layout_width="46dip"
        android:layout_height="0dp"
        android:contentDescription="@string/content_description_open_roller_shutter"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingLeft="3dip"
        android:paddingRight="3dip"
        android:src="@drawable/ic_keyboard_arrow_up_white_24dp"
        android:tint="@color/colorAccent"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rollershutterbutton_stop"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/rollershutterbutton_stop"
        android:layout_width="46dip"
        android:layout_height="0dp"
        android:contentDescription="@string/content_description_stop_roller_shutter"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingLeft="7dip"
        android:paddingRight="7dip"
        android:src="@drawable/ic_clear_white_24dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:tint="@color/colorAccent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/rollershutterbutton_down"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/rollershutterbutton_down"
        android:layout_width="46dip"
        android:layout_height="0dp"
        android:contentDescription="@string/content_description_close_roller_shutter"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingLeft="3dip"
        android:paddingRight="3dip"
        android:src="@drawable/ic_keyboard_arrow_down_white_24dp"
        android:tint="@color/colorAccent"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
