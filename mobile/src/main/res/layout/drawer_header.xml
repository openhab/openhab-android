<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/drawer_header_size"
    android:orientation="vertical"
    android:background="?colorPrimaryContainer">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/server_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingStart="16dp"
        android:paddingEnd="8dp"
        android:paddingTop="16dp"
        android:paddingBottom="16dp">

        <TextView
            android:id="@+id/server_name_label"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/drawer_mode_switcher"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/server_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="?colorOnPrimaryContainer"
            android:text="@string/drawer_active_server_label" />

        <TextView
            android:id="@+id/server_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/drawer_mode_switcher"
            app:layout_constraintTop_toBottomOf="@id/server_name_label"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textColor="?colorOnPrimaryContainer"
            android:textStyle="bold"
            tools:text="server" />

        <ImageView
            android:id="@+id/drawer_mode_switcher"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="center"
            app:tint="?colorOnPrimaryContainer"
            android:src="@drawable/ic_menu_down_24dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
