<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:activatedBackgroundIndicator"
    android:paddingHorizontal="@dimen/widgetlist_margin_padded_items">

    <include layout="@layout/widgetlist_iconsmallvaluetext" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/switch_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        app:singleSelection="true" />

    <org.openhab.habdroid.ui.widget.ExtendedSpinner
        android:id="@+id/spinner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/widgetlist_spinner_margin_end"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:spinnerMode="dialog"
        android:gravity="end" />

</LinearLayout>
