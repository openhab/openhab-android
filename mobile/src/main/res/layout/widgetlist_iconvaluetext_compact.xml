<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <org.openhab.habdroid.ui.widget.WidgetImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/widgetlist_icon_size"
        android:layout_height="@dimen/widgetlist_icon_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:imageScalingType="scaleToFit"
        tools:src="@drawable/ic_openhab_appicon_24dp" />

    <TextView
        android:id="@+id/label"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        app:layout_constraintStart_toEndOf="@id/icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/value"
        android:ellipsize="end"
        android:maxLines="1"
        android:textDirection="locale"
        android:textAppearance="?attr/textAppearanceBodyLarge"
        tools:text="Widget title" />

    <TextView
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBaseline_toBaselineOf="@id/label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textDirection="anyRtl"
        android:maxLines="1"
        android:ellipsize="end"
        android:textAppearance="?attr/textAppearanceLabelLarge"
        tools:text="Widget value" />

    <!-- ensure controls become right aligned when there's no label or value -->
    <Space
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="0.01" />

</androidx.constraintlayout.widget.ConstraintLayout>
