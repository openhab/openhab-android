<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="ColorPicker">
        <attr name="wheel_size" format="integer" />
        <attr name="pointer_size" format="integer" />
    </declare-styleable>

    <declare-styleable name="WidgetImageView">
        <attr name="fallback" format="reference" />
        <attr name="progressIndicator" format="reference" />
        <attr name="emptyHeightToWidthRatio" format="fraction" />
        <attr name="maxHeightToWidthRatio" format="fraction" />
    </declare-styleable>

    <declare-styleable name="SegmentedControlButton">
        <attr name="lineColor" format="color" />
        <attr name="textDistanceFromLine" format="dimension" />
        <attr name="lineHeight" format="dimension" />
        <attr name="backgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="customAttrs">
        <attr name="themedArrowDownIcon" format="reference" />
        <attr name="themedArrowUpIcon" format="reference" />
        <attr name="themedColorIcon" format="reference" />
        <attr name="themedClearIcon" format="reference" />
        <attr name="themedSpinnerCaret" format="reference" />
        <attr name="widgetlistItemDivider" format="reference" />
        <attr name="frameWidgetDividerBackground" format="reference" />
        <attr name="imageLoadingIndicator" format="reference" />
        <attr name="chartTheme" format="string" />
        <attr name="valueColors" format="reference" />
    </declare-styleable>

    <attr name="themedDrawerBackground" format="reference|color" />
    <attr name="themedHeaderTextColor" format="reference|color" />

    <item name="originalColor" type="id" />
</resources>
