<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="WidgetImageView">
        <attr name="fallback" format="reference" />
        <attr name="progressIndicator" format="reference" />
        <attr name="emptyHeightToWidthRatio" format="fraction" />
        <attr name="addRandomnessToUrl" format="boolean" />
        <attr name="imageScalingType" format="enum">
            <enum name="noScaling" value="0" />
            <enum name="scaleToFit" value="1" />
            <enum name="scaleToFitWithViewAdjustment" value="2" />
            <enum name="scaleToFitWithViewAdjustmentDownscaleOnly" value="3" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ItemUpdatingPreference">
        <attr name="summaryEnabled" format="string" />
        <attr name="summaryDisabled" format="string" />
        <attr name="iconEnabled" format="integer" />
        <attr name="iconDisabled" format="integer" />
        <attr name="helpUrl" format="string" />
    </declare-styleable>

    <declare-styleable name="InfoPreference">
        <attr name="infoUrl" format="string" />
    </declare-styleable>

    <declare-styleable name="customAttrs">
        <attr name="chartTheme" format="string" />
        <attr name="transparentChartTheme" format="string" />
        <attr name="valueColors" format="reference" />
        <attr name="selectedWidgetBackgroundColor" format="color" />
    </declare-styleable>

    <declare-styleable name="CustomInputTypePreference">
        <attr name="whitespaceBehavior" format="enum">
            <enum name="ignore" value="0" />
            <enum name="trim" value="1" />
            <enum name="warn" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="UrlInputPreference">
        <attr name="isForRemoteServer" format="boolean" />
    </declare-styleable>

    <item name="originalColor" type="id" />
    <attr name="homeScreenWidgetBackgroundRadius" format="dimension" />
</resources>
