        <item name="colorPrimary">#FF5722</item>
        <item name="colorAccent">#FF5722</item>
        <item name="colorPrimaryDark">#BF360C</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="android:windowBackground">?android:colorBackground</item>

        <item name="themedDrawerBackground">?android:colorBackground</item>
        <item name="themedHeaderTextColor">@color/colorAccent_themeDark</item>
    </style>

    <style name="HABDroid.Black" parent="@style/Theme.AppCompat">
        <item name="customMicIcon">@android:drawable/ic_btn_speak_now</item>
        <item name="widgetlistItemDivider">?android:dividerHorizontal</item>
        <item name="frameWidgetDividerBackground">@color/black</item>

        <item name="colorPrimary">@color/black</item>
        <item name="colorAccent">#9E9E9E</item>
        <item name="colorPrimaryDark">@color/black</item>

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowActionBarOverlay">false</item>
        <item name="android:windowBackground">@color/black</item>

